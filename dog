      touch-action: manipulation;
    }
    .game {
      width: 800px;
      height: 200px;
      background: #fff;
      border: 3px solid #444;
      margin: 50px auto;
      position: relative;
      overflow: hidden;
    }
    .perro {
      width: 50px;
      height: 50px;
      background: url('https://twemoji.maxcdn.com/v/latest/72x72/1f415.png') no-repeat center/contain;
      transform: scaleX(-1);
      position: absolute;
      bottom: 0;
      left: 50px;
      transition: transform 0.1s;
    }
    .obstacle {
      width: 25px;
      height: 50px;
      background: green;
      position: absolute;
      bottom: 0;
      right: -50px;
      animation-name: moveObstacle;
      animation-timing-function: linear;
      animation-iteration-count: infinite;
      animation-duration: 2s;
    }
    @keyframes moveObstacle {
      0% { right: -50px; }
      100% { right: 850px; }
    }
    .jump {
      animation: jump 0.7s ease-out;
    }
    @keyframes jump {
      0% { bottom: 0; transform: scaleX(-1) rotate(0deg); }
      50% { bottom: 130px; transform: scaleX(-1) rotate(-20deg); }
      100% { bottom: 0; transform: scaleX(-1) rotate(0deg); }
    }
    #score {
      text-align: center;
      font-size: 22px;
      margin-top: 20px;
    }
